<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndoorNavigation.LocateItemPage" Title="Locate It">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HeightRequest="20" HorizontalOptions="CenterAndExpand">
                <Frame HeightRequest="10" WidthRequest="10" CornerRadius="5" BackgroundColor="Gold"/>
                <Label Text="Destination" TextColor="Black" FontSize="8" VerticalTextAlignment="Center"/>
                <Frame HeightRequest="10" WidthRequest="10" CornerRadius="5" BackgroundColor="#106DE9" Margin="30,0,0,0"/>
                <Label Text="You" TextColor="Black" FontSize="8" VerticalTextAlignment="Center"/>
            </StackLayout>
            <AbsoluteLayout HeightRequest="570" WidthRequest="246" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" x:Name="abs">
                <Image AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Source="FloorPlan.png">

                </Image>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>